<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main" >

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/nav_bar_profile_image_button"
        android:layout_weight=".33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigation_bar_button_border"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/db_single_person_icon"
        android:tag="1"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/nav_bar_showcase_image_button"
        android:layout_weight=".33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigation_bar_button_border"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/db_search_icon"
        android:tag="2"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/nav_bar_greetings_image_button"
        android:layout_weight=".33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigation_bar_button_border"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/greetings_icon_grey"
        android:tag="3"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/nav_bar_messages_image_button"
        android:layout_weight=".33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/navigation_bar_button_border"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/messages_icon_grey"
        android:tag="4"
        />

</LinearLayout>