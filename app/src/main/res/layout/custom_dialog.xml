<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="4dp"
    android:background="@drawable/corner_radius_linear"
    android:minHeight="160dp"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_dialog_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:maxHeight="60dp"
            android:src="@drawable/location_0305" />

        <TextView
            android:id="@+id/custom_dialog_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="CUSTOM_DIALOG_TEXT_PLACEHOLDER"
            android:textColor="#545454"
            android:fontFamily="sans-serif"
            android:layout_margin="8dp"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/custom_dialog_nok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#FFFFFF"
                android:text="Ä°ptal"
                android:textAllCaps="false"
                android:textColor="#8b0000"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"/>

            <Button
                android:id="@+id/custom_dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#FFFFFF"
                android:text="Tamam"
                android:textAllCaps="false"
                android:textColor="#06a94d"
                android:textSize="20dp"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

    </TableLayout>

</LinearLayout>